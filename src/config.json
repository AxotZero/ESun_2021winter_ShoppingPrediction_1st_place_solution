{
    "name": "PetPoc",
    "n_gpu": 1,
    "arch": {
        "type": "MultiIndexModelBase",
        "args": {
            "cols_config_path":"../data/preprocessed/v2_pct/column_config.yml", 
            "emb_feat_dim": 32, 
            "mask_feat_ratio": 0, 
            "dropout": 0.3,
            "hidden_size": 128, 
            "temporal_aggregator_type":"Seq2SeqGruAggregator", 
            "temporal_aggregator_args": {
                "input_size": 128,
                "hidden_size": 256, 
                "num_layers": 3,
                "dropout": 0.3
            }
        }
    },
    "data_loader": {
        "type": "MultiIndexDataLoader",
        "args": {
            "data_path": "../md01_data/customers_pct.pkl",
            "batch_size": 1536,
            "shuffle": true,
            "validation_split": 0.2,
            "num_workers": 1
        }
    },
    "optimizer": {
        "type": "Ranger",
        "args": {
            "lr": 0.001,
            "weight_decay": 0.00001
        }
    },
    "loss": "seq2seq_soft_ce",
    "metrics": [
        "seq2seq_NDCG16"
    ],
    "trainer": {
        "epochs": 100,
        "save_dir": "../save_dir/multi_index_model",
        "save_period": 1,
        "verbosity": 2,
        "monitor": "max val_seq2seq_NDCG16",
        "early_stop": 3,
        "tensorboard": false
    }
}