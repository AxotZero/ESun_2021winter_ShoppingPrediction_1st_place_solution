{
    "name": "PetPoc",
    "n_gpu": 1,
    "arch": {
        "type": "MultiIndexModelBase",
        "args": {
            "cols_config_path": "../data/preprocessed/v2_pct/column_config.yml",
            "emb_feat_dim": 32,
            "mask_feat_ratio": 0,
            "dropout": 0.5,
            "hidden_size": 512,
            "temporal_aggregator_type": "Seq2SeqGruAggregator",
            "temporal_aggregator_args": {
                "input_size": 512,
                "hidden_size": 1024,
                "num_layers": 3,
                "dropout": 0.3
            }
        }
    },
    "data_loader": {
        "type": "MultiIndexDataLoader",
        "args": {
            "data_path": "../md01_data/customers_pct.pkl",
            "batch_size": 512,
            "shuffle": true,
            "validation_split": 0.2,
            "num_workers": 1
        }
    },
    "optimizer": {
        "type": "Ranger",
        "args": {
            "lr": 0.001,
            "weight_decay": 1e-05
        }
    },
    "loss": "seq2seq_soft_ce",
    "metrics": [
        "seq2seq_NDCG",
        "seq2seq_NDCG16"
    ],
    "trainer": {
        "epochs": 100,
        "save_dir": "../save_dir/mm_hidden512",
        "save_period": 1,
        "verbosity": 2,
        "monitor": "min val_loss",
        "early_stop": 3,
        "tensorboard": false
    }
}