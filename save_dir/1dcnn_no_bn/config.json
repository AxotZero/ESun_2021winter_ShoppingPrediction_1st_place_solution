{
    "name": "PetPoc",
    "n_gpu": 1,
    "arch": {
        "type": "BigArch",
        "args": {
            "row_encoder_type": "FixedEmbedder1DCNN",
            "row_encoder_args": {
                "cols_config_path": "../data/preprocessed/v2_pct/column_config.yml",
                "hidden_size": 128,
                "dropout": 0.2,
                "mask_feat_ratio": 0,
                "mask_row_ratio": 0,
                "apply_bn": false
            },
            "rows_aggregator_type": "RowsTransformerAggregator",
            "rows_aggregator_args": {
                "hidden_size": 128,
                "num_layers": 2,
                "dropout": 0.3
            },
            "temporal_aggregator_type": "Seq2SeqGruAggregator",
            "temporal_aggregator_args": {
                "input_size": 128,
                "hidden_size": 256,
                "num_layers": 2,
                "dropout": 0.3
            },
            "hidden_size": 256,
            "num_classes": 49
        }
    },
    "data_loader": {
        "type": "Seq2SeqDataLoader",
        "args": {
            "data_path": "../md01_data/customers_pct.pkl",
            "num_classes": 49,
            "batch_size": 256,
            "shuffle": true,
            "validation_split": 0.2,
            "num_workers": 2
        }
    },
    "optimizer": {
        "type": "Ranger",
        "args": {
            "lr": 0.001,
            "weight_decay": 1e-05
        }
    },
    "loss": "seq2seq_soft_ce",
    "metrics": [
        "seq2seq_NDCG16"
    ],
    "trainer": {
        "epochs": 100,
        "save_dir": "../save_dir/1dcnn_no_bn",
        "save_period": 1,
        "verbosity": 2,
        "monitor": "min val_loss",
        "early_stop": 3,
        "tensorboard": false
    }
}